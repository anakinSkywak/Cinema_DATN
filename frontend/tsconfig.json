{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./", // Đảm bảo đường dẫn cơ bản cho việc resolve module
    "paths": {
      "*": ["node_modules/*"] // Giúp TypeScript tìm các module trong node_modules
    }
  }
}
